<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nazuninha Bot - Grupos</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f3f4f6;
        }
        .group-card {
            transition: all 0.3s ease;
        }
        .group-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <a href="/" class="flex items-center space-x-4">
                        <img src="/img/logo.png" alt="Logo" class="h-12 w-12 rounded-full shadow-lg">
                        <div>
                            <h1 class="text-2xl font-bold text-gray-800">Nazuninha Bot</h1>
                            <p class="text-sm text-gray-600">Gerenciamento de Grupos</p>
                        </div>
                    </a>
                </div>
                <a href="/" class="flex items-center text-blue-600 hover:text-blue-700">
                    <i class="fas fa-arrow-left mr-2"></i>
                    <span>Voltar ao Dashboard</span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% groups.forEach(group => { %>
                <div class="group-card bg-white rounded-xl shadow-md overflow-hidden">
                    <!-- Group Image -->
                    <div class="relative h-48">
                        <img src="<%= group.image %>" alt="<%= group.name %>" class="w-full h-full object-cover">
                        <div class="absolute bottom-0 left-0 right-0 px-6 py-4 bg-gradient-to-t from-black/70 to-transparent">
                            <h2 class="text-xl font-semibold text-white"><%= group.name %></h2>
                        </div>
                    </div>

                    <!-- Group Info -->
                    <div class="p-6">
                        <!-- Members Count -->
                        <div class="flex items-center mb-4">
                            <div class="p-2 rounded-full bg-blue-100 mr-3">
                                <i class="fas fa-users text-blue-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Membros</p>
                                <p class="text-lg font-semibold text-gray-800"><%= group.members %></p>
                            </div>
                        </div>

                        <!-- Active Systems -->
                        <div class="space-y-3">
                            <h3 class="text-lg font-semibold text-gray-800 mb-2">Sistemas Ativos</h3>
                            <div class="flex flex-wrap gap-2">
                                <% if (group.systems) { %>
                                    <% if (group.systems.antilink) { %>
                                        <span class="px-3 py-1 rounded-full text-sm bg-red-100 text-red-800">
                                            <i class="fas fa-shield-alt mr-1"></i> Anti-link
                                        </span>
                                    <% } %>
                                    <% if (group.systems.welcome) { %>
                                        <span class="px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">
                                            <i class="fas fa-door-open mr-1"></i> Bem-vindo
                                        </span>
                                    <% } %>
                                    <% if (group.systems.antiflood) { %>
                                        <span class="px-3 py-1 rounded-full text-sm bg-yellow-100 text-yellow-800">
                                            <i class="fas fa-flood mr-1"></i> Anti-flood
                                        </span>
                                    <% } %>
                                <% } else { %>
                                    <p class="text-gray-500 text-sm">Nenhum sistema ativo</p>
                                <% } %>
                            </div>
                        </div>

                        <!-- Top Active Users -->
                        <div class="mt-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-3">Top Ativos</h3>
                            <% if (group.topUsers && group.topUsers.length > 0) { %>
                                <div class="space-y-3">
                                    <% group.topUsers.slice(0, 3).forEach((user, index) => { %>
                                        <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
                                            <div class="flex items-center space-x-3">
                                                <div class="w-8 h-8 flex items-center justify-center rounded-full <%= ['bg-yellow-100', 'bg-gray-100', 'bg-orange-100'][index] %>">
                                                    <span class="<%= ['text-yellow-600', 'text-gray-600', 'text-orange-600'][index] %>">
                                                        <%= index + 1 %>º
                                                    </span>
                                                </div>
                                                <span class="font-medium text-gray-800"><%= user.name %></span>
                                            </div>
                                            <span class="text-sm text-gray-600"><%= user.messages %> msgs</span>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <p class="text-gray-500 text-sm">Nenhum dado de atividade disponível</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>

            <% if (groups.length === 0) { %>
                <div class="col-span-full flex flex-col items-center justify-center py-12 text-gray-500">
                    <i class="fas fa-users text-6xl mb-4"></i>
                    <p class="text-xl">Nenhum grupo encontrado</p>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white shadow-lg mt-8">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <p class="text-gray-600 mb-4 md:mb-0">
                    Desenvolvido com ❤️ por Hiudy
                </p>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-600 hover:text-gray-800">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="text-gray-600 hover:text-gray-800">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
